<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                                 http://java.sun.com/xml/ns/persistence/persistence_2_1.xsd"
             version="1.0">

    <persistence-unit name="example03">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <class>com.luxoft.springadvanced.jpa.inheritance.bean.Student</class>
        <class>com.luxoft.springadvanced.jpa.inheritance.bean.Professional</class>
        <class>com.luxoft.springadvanced.jpa.inheritance.bean.Address</class>
        
        <exclude-unlisted-classes/>
         
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="validate" />
            <property name="hibernate.ejb.naming_strategy" value="org.hibernate.cfg.ImprovedNamingStrategy"/>
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.HashtableCacheProvider" />
        </properties>
    </persistence-unit>
    
</persistence>